<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.fs.htmlclient"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        version="1.0.0">

	<name>
		Mobile Client
	</name>

	<description>
		Mobile Client for Framework Studio Applications
	</description>

	<author email="info@framework-systems.de" href="http://www.framework-systems.de">
		Framework Systems GmbH
	</author>

	<content src="index.html" />

	<access origin="http://*/*" />
  <access origin="https://*/*" />

  <allow-navigation href="http://*/*" />
  <allow-navigation href="https://*/*" />

	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />

	<platform name="android">
		<allow-intent href="market:*" />
	</platform>

	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
	</platform>

  <preference name="SplashScreenDelay" value="5000" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="android-minSdkVersion" value="19" />
	<preference name="android-targetSdkVersion" value="25" />

	<platform name="windows">
		<preference name="windows-target-version" value="10.0" />
	</platform>

	<platform name="ios">
		<preference name="Orientation" value="all" />
	</platform>

  <platform name="android">
    <icon src="icons/android/icon36x36.png" density="ldpi"/>
    <icon src="icons/android/icon48x48.png" density="mdpi"/>
    <icon src="icons/android/icon72x72.png" density="hdpi"/>
    <icon src="icons/android/icon96x96.png" density="xhdpi"/>
    <icon src="icons/android/icon144x144.png" density="xxhdpi"/>
    <icon src="icons/android/icon192x192.png" density="xxxhdpi"/>

    <splash src="icons/android/land320x200.png" density="land-ldpi" />
    <splash src="icons/android/land480x320.png" density="land-mdpi" />
    <splash src="icons/android/land800x480.png" density="land-hdpi" />
    <splash src="icons/android/land1280x720.png" density="land-xhdpi" />
    <splash src="icons/android/land1600x960.png" density="land-xxhdpi" />
    <splash src="icons/android/land1920x1280.png" density="land-xxxhdpi" />

    <splash src="icons/android/port200x320.png" density="port-ldpi"/>
