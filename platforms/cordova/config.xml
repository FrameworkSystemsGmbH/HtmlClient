<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.fs.htmlclient"
        xmlns="http://www.w3.org/ns/widgets"
        version="1.0.0">

  <!-- Phonegap Exclusive -->
  <preference name="phonegap-version" value="cli-7.0.1" />
  <!-- /Phonegap Exclusive -->

  <!-- Metadata -->
	<name>Mobile Client</name>
	<description>Mobile Client for Framework Studio Applications</description>
	<author email="info@framework-systems.de" href="http://www.framework-systems.de">Framework Systems GmbH</author>
	<content src="index.html" />
  <!-- /Metadata -->

  <!-- Access -->
	<access origin="http://*/*" />
  <access origin="https://*/*" />

  <allow-navigation href="http://*/*" />
  <allow-navigation href="https://*/*" />

	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />

	<platform name="android">
		<allow-intent href="market:*" />
	</platform>

	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
	</platform>
  <!-- /Access -->

  <!-- Preferences -->
  <preference name="SplashScreenDelay" value="5000" />

  <platform name="android">
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="25" />
	</platform>

	<platform name="windows">
		<preference name="windows-target-version" value="10.0" />
	</platform>
  <!-- /Preferences -->

  <!-- Plugins -->
  <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
  <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
  <plugin name="cordova-plugin-device" spec="^1.1.6" />
  <!-- /Plugins -->

  <!-- Icons & Splashscreens -->
  <platform name="android">
    <icon src="android_icon_36x36.png" density="ldpi" />
    <icon src="android_icon_48x48.png" density="mdpi" />
    <icon src="android_icon_72x72.png" density="hdpi" />
    <icon src="android_icon_96x96.png" density="xhdpi" />
    <icon src="android_icon_144x144.png" density="xxhdpi" />
    <icon src="android_icon_192x192.png" density="xxxhdpi" />

    <splash src="android_port_200x320.png" density="port-ldpi" />
    <splash src="android_port_320x480.png" density="port-mdpi" />
    <splash src="android_port_480x800.png" density="port-hdpi" />
    <splash src="android_port_720x1280.png" density="port-xhdpi" />
    <splash src="android_port_960x1600.png" density="port-xxhdpi" />
    <splash src="android_port_1280x1920.png" density="port-xxxhdpi" />

    <splash src="android_land_320x200.png" density="land-ldpi" />
    <splash src="android_land_480x320.png" density="land-mdpi" />
    <splash src="android_land_800x480.png" density="land-hdpi" />
    <splash src="android_land_1280x720.png" density="land-xhdpi" />
    <splash src="android_land_1600x960.png" density="land-xxhdpi" />
    <splash src="android_land_1920x1280.png" density="land-xxxhdpi" />
  </platform>
  <!-- /Icons & Splashscreens -->
</widget>
