<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.fs.htmlclient"
        xmlns="http://www.w3.org/ns/widgets"
        version="1.0.0">

  <!-- Phonegap Exclusive -->
  <preference name="phonegap-version" value="cli-7.0.1" />
  <!-- /Phonegap Exclusive -->

  <!-- Metadata -->
	<name>Mobile Client</name>
	<description>Mobile Client for Framework Studio Applications</description>
	<author email="info@framework-systems.de" href="http://www.framework-systems.de">Framework Systems GmbH</author>
	<content src="index.html" />
  <!-- /Metadata -->

  <!-- Plugins -->
  <plugin name="cordova-plugin-device" spec="^1.1.6" />
  <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
  <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />

  <plugin name="ionic-plugin-keyboard" spec="^2.2.1" />

  <platform name="android">
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.3.0" />
  </platform>

  <platform name="ios">
    <plugin name="cordova-plugin-ionic-webview" spec="^1.1.15" />
  </platform>
  <!-- /Plugins -->

  <!-- Access -->
	<access origin="http://*/*" />
  <access origin="https://*/*" />

  <allow-navigation href="http://localhost:8080/*"/>
  <allow-navigation href="http://*/*" />
  <allow-navigation href="https://*/*" />

	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />

	<platform name="android">
		<allow-intent href="market:*" />
	</platform>

	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
	</platform>
  <!-- /Access -->

  <!-- Preferences -->
  <preference name="fullscreen" value="false" />
  <preference name="SplashScreenDelay" value="3000" />

  <platform name="android">
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="25" />
    <preference name="android-windowSoftInputMode" value="adjustResize" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect"/>
    <preference name="xwalkMode" value="embedded"/>
	</platform>

	<platform name="windows">
		<preference name="windows-target-version" value="10.0" />
	</platform>

  <platform name="ios">
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
	</platform>
  <!-- /Preferences -->

  <!-- Icons & Splashscreens -->
  <icon src="icon.png" />>

  <platform name="android">
    <icon src="and_icon_36x36.png" density="ldpi" />
    <icon src="and_icon_48x48.png" density="mdpi" />
    <icon src="and_icon_72x72.png" density="hdpi" />
    <icon src="and_icon_96x96.png" density="xhdpi" />
    <icon src="and_icon_144x144.png" density="xxhdpi" />
    <icon src="and_icon_192x192.png" density="xxxhdpi" />

    <splash src="and_port_200x320.png" density="port-ldpi" />
    <splash src="and_port_320x480.png" density="port-mdpi" />
    <splash src="and_port_480x800.png" density="port-hdpi" />
    <splash src="and_port_720x1280.png" density="port-xhdpi" />
    <splash src="and_port_960x1600.png" density="port-xxhdpi" />
    <splash src="and_port_1280x1920.png" density="port-xxxhdpi" />

    <splash src="and_land_320x200.png" density="land-ldpi" />
    <splash src="and_land_480x320.png" density="land-mdpi" />
    <splash src="and_land_800x480.png" density="land-hdpi" />
    <splash src="and_land_1280x720.png" density="land-xhdpi" />
    <splash src="and_land_1600x960.png" density="land-xxhdpi" />
    <splash src="and_land_1920x1280.png" density="land-xxxhdpi" />
  </platform>

  <platform name="ios">
    <icon src="ios_icon_29x29.png" width="29" height="29" />
    <icon src="ios_icon_40x40.png" width="40" height="40" />
    <icon src="ios_icon_50x50.png" width="50" height="50" />
    <icon src="ios_icon_57x57.png" width="57" height="57" />
    <icon src="ios_icon_58x58.png" width="58" height="58" />
    <icon src="ios_icon_72x72.png" width="72" height="72" />
    <icon src="ios_icon_76x76.png" width="76" height="76" />
    <icon src="ios_icon_80x80.png" width="80" height="80" />
    <icon src="ios_icon_87x87.png" width="87" height="87" />
    <icon src="ios_icon_100x100.png" width="100" height="100" />
    <icon src="ios_icon_114x114.png" width="114" height="114" />
    <icon src="ios_icon_120x120.png" width="120" height="120" />
    <icon src="ios_icon_144x144.png" width="144" height="144" />
    <icon src="ios_icon_152x152.png" width="152" height="152" />
    <icon src="ios_icon_167x167.png" width="167" height="167" />
    <icon src="ios_icon_180x180.png" width="180" height="180" />

    <splash src="ios_port_320x480.png" width="320" height="480" />
    <splash src="ios_port_640x960.png" width="640" height="960" />
    <splash src="ios_port_640x1136.png" width="640" height="1136" />
    <splash src="ios_port_750x1334.png" width="750" height="1334" />
    <splash src="ios_port_768x1024.png" width="768" height="1024" />
    <splash src="ios_port_1242x2208.png" width="1242" height="2208" />
    <splash src="ios_port_1536x2048.png" width="1536" height="2048" />

    <splash src="ios_land_1024x768.png" width="1024" height="768" />
    <splash src="ios_land_2048x1536.png" width="2048" height="1536" />
    <splash src="ios_land_2208x1242.png" width="2208" height="1242" />
  </platform>
  <!-- /Icons & Splashscreens -->
</widget>
